generator client {
  provider = "dart run orm"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    name        String
    username    String   @unique
    height      String?
    weight      String?
    age         String?
    bloodgroup  String?
    gender      String?
    records     Record[]
    address     String
    image       String
}


model Record {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    date        String
    symptoms    String[]
    diagnosis   String[]
    treatment   String[]
    reports     String[]
    user        User     @relation(fields: [userId], references: [id])
    userId      String    @unique @db.ObjectId
}